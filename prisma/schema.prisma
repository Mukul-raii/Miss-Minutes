generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  apiToken      String?   @unique @default(cuid()) // Simple API token for the extension
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Project {
  id         String        @id @default(cuid())
  name       String
  path       String
  userId     String
  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  activities ActivityLog[]
  commits    GitCommit[]
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@unique([userId, path])
}

model ActivityLog {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  filePath  String
  language  String
  editor    String? // Editor used (vscode, vim, etc.)
  timestamp BigInt // Unix timestamp from extension
  duration  Int // in milliseconds
  commitId  String? // Associated git commit hash
  branch    String? // Git branch name
  createdAt DateTime @default(now())

  @@unique([projectId, commitId, branch, filePath]) // Prevent duplicate file activities per commit
  @@index([projectId, timestamp])
  @@index([commitId])
}

model GitCommit {
  id            String   @id @default(cuid())
  projectId     String
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  commitHash    String // Git commit SHA
  message       String   @db.Text
  author        String
  authorEmail   String
  timestamp     BigInt // Unix timestamp of commit
  totalDuration Int      @default(0) // Total time spent on this commit in milliseconds
  filesChanged  Int      @default(0) // Number of files changed
  linesAdded    Int      @default(0) // Lines added
  linesDeleted  Int      @default(0) // Lines deleted
  branch        String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([projectId, commitHash])
  @@index([projectId, timestamp])
}
